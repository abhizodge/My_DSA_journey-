class Solution
{
    public:
    struct node *reverse (struct node *head, int k)
    { 
        if(head==NULL)
        {
            return head;
        }
        node *curr=head;
        node *prvi=NULL;
        node *forward=NULL;
        int cnt=0;
        while(curr!=NULL && cnt<k)
        {
            forward=curr->next;
            curr->next=prvi;
            prvi=curr;
            curr=forward;
            cnt++;
            
        }
        if(forward!=NULL)
        {
            head->next=reverse(forward,k);
            
        }
        return prvi;
    }
};
