

#include <iostream>

using namespace std;

int main()
{
    char ch;
    cin>>ch;
   
    if(ch=='A' || ch=='E'|| ch=='I'|| ch=='O'|| ch=='U'|| ch=='a'|| ch=='e'|| ch=='i' || ch=='o' || ch=='u')
    {
        cout<<"vowel"<<endl;
    }
      else if(!isalpha(ch))  //checking charaacter alphabhet or not
    {
        cout<<"not alphabhet"<<endl;
    }
    else
    {
        cout<<"consonat"<<endl;
    }

    return 0;
}
____________________________________

counting the total number of vowel

#include<iostream>
#include<stdio.h>
using namespace std;
int main() {
    char str[200];
    gets(str);
    int cnt=0;
    for(int i=0;str[i];i++)
    {
        
        if(str[i]=='A'||str[i]=='E'||str[i]=='I'||str[i]=='O'||str[i]=='a'||str[i]=='e'||str[i]=='i'||str[i]=='o'||str[i]=='U'||str[i]=='u')
        {
            cnt++;
        }
    }
    cout<<cnt;
    return 0;
}



